# Copy this file to:
# C:\Apps\insidernews-ai-publisher\config\publisher.env.ps1

# Required secrets
$env:OPENAI_API_KEY = "REPLACE_ME"
$env:WP_URL = "https://insidernews.ro"
$env:WP_USER = "REPLACE_ME"
$env:WP_APP_PASSWORD = "REPLACE_ME"

# Recommended
$env:OPENAI_MODEL = "gpt-4.1"
$env:WP_DEFAULT_FEATURED_MEDIA_ID = "1234"
# Optional:
# - set 0 to disable explicit author assignment
# - use a real user ID only if authenticated WP user has permission
#   to publish as that author (Editor/Admin or matching author account)
$env:WP_AUTHOR_ID = "0"

# Publish cadence and window
$env:POSTS_PER_RUN = "1"
$env:PUBLISH_WINDOW_ENABLED = "true"
$env:PUBLISH_WINDOW_START_HOUR = "8"
$env:PUBLISH_WINDOW_END_HOUR = "22"
$env:PUBLISH_WINDOW_TIMEZONE = "Europe/Bucharest"

# Freshness and quality
$env:ALLOW_FALLBACK = "false"
$env:SAME_DAY_ONLY = "true"
$env:NEWS_TIMEZONE = "Europe/Bucharest"
$env:STRICT_RECENT = "true"
$env:CANDIDATE_LIMIT = "40"
$env:MIN_WORDS = "350"
$env:STRICT_QUALITY_GATE = "true"
$env:TITLE_MAX_CHARS = "110"
$env:SEO_TITLE_MAX_CHARS = "60"
$env:META_DESCRIPTION_MIN_CHARS = "130"
$env:META_DESCRIPTION_MAX_CHARS = "160"
$env:MIN_LEAD_WORDS = "18"
# Cost-saving (no hard length skips by default)
$env:ENFORCE_AI_MIN_WORDS = "false"
$env:ENFORCE_GENERATOR_MIN_WORDS = "false"
$env:ENFORCE_HOWTO_MIN_WORDS = "false"
$env:ENFORCE_PUBLISH_MIN_WORDS = "false"
$env:ENFORCE_LENGTH_QUALITY = "false"

# Editorial trust + TOC
$env:SOURCE_ATTRIBUTION_ENABLED = "true"
$env:SOURCE_ATTRIBUTION_REQUIRE_LINK = "true"
$env:EDITORIAL_NOTE_ENABLED = "true"
$env:EDITORIAL_AUTHOR_NAME = "Gabriel Andrei"
$env:EDITORIAL_AUTHOR_PROFILE_URL = "https://insidernews.ro/author/gabriel/"
$env:EDITORIAL_POLICY_URL = "https://insidernews.ro/politica-editoriala"
$env:RIGHT_OF_REPLY_URL = "https://insidernews.ro/drept-la-replica"
$env:CORRECTIONS_EMAIL = "redactie@insidernews.ro"
$env:BLOCK_TABLOID_TITLES = "true"
$env:BLOCK_ENIGMATIC_TITLES = "true"
$env:BLOCK_SUPERLATIVE_TITLES = "true"
$env:PREMIUM_EDITORIAL_PROFILE = "true"
$env:PREMIUM_ADAPTIVE_SECTIONS = "true"
$env:PREMIUM_REQUIRE_KEY_FACTS = "false"
$env:PREMIUM_REQUIRE_WHATS_NEXT = "false"
$env:PREMIUM_COMPLEX_MIN_WORDS = "260"
$env:PREMIUM_KEY_FACTS_MIN_ITEMS = "3"
$env:PREMIUM_KEY_FACTS_MAX_ITEMS = "5"
$env:TABLE_OF_CONTENTS_ENABLED = "true"
$env:TABLE_OF_CONTENTS_TITLE = "Cuprins"
$env:TABLE_OF_CONTENTS_MAX_ITEMS = "8"
$env:TABLE_OF_CONTENTS_MIN_HEADINGS = "1"
$env:TABLE_OF_CONTENTS_REQUIRED = "true"

# Daily how-to guides (category "Cum sa?" = 6064)
$env:HOWTO_DAILY_ENABLED = "true"
$env:HOWTO_DAILY_CATEGORY_ID = "6064"
$env:HOWTO_DAILY_TARGET = "2"
$env:HOWTO_DAILY_POSTS_PER_RUN = "1"
$env:HOWTO_DAILY_TIMEZONE = "Europe/Bucharest"
$env:HOWTO_DAILY_SLOTS = "10:15,18:15"
$env:HOWTO_SLOT_GRACE_MINUTES = "20"
$env:HOWTO_SLOT_STRICT = "true"
$env:HOWTO_MIN_WORDS = "350"
$env:HOWTO_ATTEMPTS = "3"
$env:HOWTO_TOPIC_HINT = ""

# Categories and fact consistency
$env:FORCE_CATEGORY_ID = "0"
$env:CATEGORY_OVERRIDE_ENABLED = "true"
$env:CATEGORY_SOURCE_BIAS = "2"
$env:CATEGORY_OVERRIDE_MARGIN = "2"
$env:CATEGORY_MIN_SCORE = "3"
$env:CATEGORY_MIN_SOURCE_SIGNAL = "6"
$env:CATEGORY_SECOND_BEST_MARGIN = "2"
$env:DEFAULT_UNCERTAIN_CATEGORY_ID = "7"
$env:ROLE_FACT_CHECK_ENABLED = "true"
$env:ROLE_FACT_MAX_CLAIMS = "6"

# Publish retries and links
$env:WP_PUBLISH_RETRIES = "3"
$env:WP_PUBLISH_RETRY_BASE_MS = "2500"
$env:WP_TWO_STEP_PUBLISH_ENABLED = "true"
$env:AI_REWRITE_ATTEMPTS = "2"
$env:FALLBACK_ATTEMPTS = "3"
$env:INTERNAL_LINKING_ENABLED = "true"
$env:INTERNAL_LINK_MAX = "3"
$env:INTERNAL_LINK_FETCH_LIMIT = "30"
$env:INTERNAL_LINK_CATEGORY_STRICT = "true"
$env:INTERNAL_LINK_ALLOW_CROSS_CATEGORY_FALLBACK = "false"
$env:REQUIRE_INTERNAL_LINK = "false"
$env:MIN_INTERNAL_LINKS = "1"

# Images
$env:USE_DYNAMIC_IMAGE = "false"
$env:REQUIRE_IMAGE = "false"
$env:SOURCE_FEATURED_IMAGE_ENABLED = "true"
$env:SOURCE_FEATURED_IMAGE_OVERRIDE_DEFAULT = "true"
$env:SOURCE_FEATURED_IMAGE_REQUIRED = "false"
$env:SOURCE_IMAGE_SCRAPE_ENABLED = "true"
$env:GOOGLE_NEWS_DECODE_ENABLED = "true"
$env:SOCIAL_IMAGE_META_ENABLED = "true"
$env:IMAGE_DEBUG = "true"

